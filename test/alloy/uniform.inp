
&MESH
  x_axis%coarse_grid = 0.0, 1.0
  x_axis%intervals   = 2
  y_axis%coarse_grid = 0.0, 1.0
  y_axis%intervals   = 2
  z_axis%coarse_grid = 0.0, 0.1
  z_axis%intervals   = 1
/

&PROBE
  coord = 0.05 0.05 0.05
  data = 'temperature'
  data_file = 'temp.dat'
/

&PROBE
  coord = 0.05 0.05 0.05
  data = 'vol-frac-liquid'
  data_file = 'lfrac.dat'
/

&OUTPUTS
  Output_T = 0.0, 5.0, 10.0, 30.0, 60.0
  Output_Dt = 4*5.0
/

&PHYSICS
  materials = 'alloy'
  alloy_solidification = .true.
/

&ALLOY
  material = 'alloy'
  num_comp = 1
  temp_fusion = 12.0
  !temp_eutectic = 8.0
  eutectic_dgdT = 0.1
  liq_slope = -8.0
  part_coef = 0.5
  concentration = 0.125
  gamma = 0.02
/

&DIFFUSION_SOLVER
  abs_temp_tol       = 0.0
  rel_temp_tol       = 1.0e-3
  abs_enthalpy_tol   = 0.0
  rel_enthalpy_tol   = 1.0e-3
  nlk_preconditioner = 'hypre_amg'
  pc_amg_cycles = 2
  max_nlk_itr = 5
  nlk_tol = 0.1
  verbose_stepping = T
  pc_freq = 1
/

&NUMERICS
  dt_init = 1.0d-4
  dt_min  = 1.0d-9
  dt_max = 1.0d-2
  dt_grow = 10.0
/

&THERMAL_SOURCE
  name = 'Hdot'
  cell_set_ids = 1
  source = -1.0
/

&THERMAL_BC
  name = 'adiabatic walls'
  type = 'flux'
  face_set_ids = 1, 2, 3, 4, 5, 6
  flux = 0.0
/

&BODY
  surface_name = 'background'
  material_name = 'liquid'
  temperature = 12.0
/

&MATERIAL
  name = 'alloy'
  density = 4.0  ! g/cm^3
  specific_heat = 0.25 ! J/g-K
  conductivity = 0.1  ! W/cm-K
  phases = 'solid', 'liquid'
/

&PHASE_CHANGE
  low_temp_phase = 'solid'
  high_temp_phase = 'liquid'
  solidus_temp  = 10.0
  liquidus_temp = 11.0
  latent_heat = 10.0 ! J
/
