DIFFUSION SOLVER TEST 3

Coupled heat conduction and species diffusion.  This is a synthesis of
diffusion solver tests 1 and 2.  By construction the heat equation and
species concentration diffusion equation are the same and have the same
solution.  The nonlinear coupling conspires to produce the same conduction
and diffusion coefficents as in tests 1 and 2 as long as the soution fields
remain identical as they should.

&MESH
  mesh_file = 'ds1-randomized.gen'
/

&OUTPUTS
  Output_T = 0.0, 0.1
  Output_Dt = 0.1
/

A kludge to force hitting the final time exactly
&SIMULATION_CONTROL
  phase_start_times = 0.1
  phase_init_dt_factor = 1.0
/

&PHYSICS
  heat_transport = .true.
  species_transport = .true.
  number_of_species = 1
  fluid_flow = .false.
/

&DIFFUSION_SOLVER
  abs_temp_tol       = 1.0e-5
  rel_temp_tol       = 1.0e-3
  abs_conc_tol       = 1.0e-5
  rel_conc_tol       = 1.0e-3
  abs_enthalpy_tol   = 1.0e-5
  rel_enthalpy_tol   = 1.0e-3
  nlk_tol            = 2.0e-3
  nlk_preconditioner = 'hypre_amg'
  pc_amg_cycles      = 2
  verbose_stepping   = .true.
/

&NUMERICS
  dt_init = 1.0d-7
  dt_min  = 1.0d-9
  dt_grow = 10.0
/

&DS_BOUNDARY_CONDITION
  name = 'conc/left end'
  variable = 'concentration1'
  condition = 'flux'
  Face_Set_IDs = 1
  data_constant = -10.0
/

Right end
&DS_BOUNDARY_CONDITION
  name = 'conc/right end'
  variable = 'concentration1'
  condition = 'dirichlet'
  Face_Set_IDs = 2
  data_constant = 0.0
/

Insulated sides
&DS_BOUNDARY_CONDITION
  name = 'conc/symmetry planes'
  variable = 'concentration1'
  condition = 'flux'
  Face_Set_IDs = 3
  data_constant = 0.0
/

&DS_BOUNDARY_CONDITION
  name = 'temp/left end'
  variable = 'temperature'
  condition = 'flux'
  Face_Set_IDs = 1
  data_constant = -10.0
/

&DS_BOUNDARY_CONDITION
  name = 'temp/right end'
  variable = 'temperature'
  condition = 'dirichlet'
  Face_Set_IDs = 2
  data_constant = 0.0
/

&DS_BOUNDARY_CONDITION
  name = 'temp/symmetry planes'
  variable = 'temperature'
  condition = 'flux'
  Face_Set_IDs = 3
  data_constant = 0.0
/

&BODY
  surface_name = 'cylinder'
  axis = 'z'
  fill = 'inside'
  translation_pt = 0.0, 0.0, -.5
  radius = 0.18
  height = 1.0
  material_number = 1
  temperature = 0.0
  phi = 0.0
/

&BODY
  surface_name = 'background'
  material_number = 2
  temperature = 0.0
  phi = 0.0
/

INTERFACES
  Vof_Method = 'divide'
/

&MATERIAL
  Material_Number = 1
  Material_Name = 'A+C'
  Density = 4.0
/

&PHASE
  name = 'A+C'
  property_name(1) = 'density',       property_constant(1) = 4.0
  property_name(2) = 'specific heat', property_constant(2) = 0.25
  property_name(3) = 'conductivity',  property_constant(3) = 0.05
  property_name(4) = 'diffusivity1',  property_constant(4) = 0.05
/

&MATERIAL_SYSTEM
  name = 'A+C'
  phases = 'A+C'
  number_of_components = 2
/

&MATERIAL
  Material_Number = 2
  Material_Name = 'B+C'
  Material_Feature = 'background'
  Density = 4.0
/

&PHASE
  name = 'B+C'
  property_name(1) = 'density',       property_constant(1) = 4.0
  property_name(2) = 'specific heat', property_constant(2) = 0.25
  property_name(3) = 'conductivity',  property_function(3) = 'B-cond'
  property_name(4) = 'diffusivity1',  property_function(4) = 'diff-C-in-B'
/

&FUNCTION
  name = 'B-cond'
  type = 'polynomial'
  poly_coefficients   = 0.1, 0.5, 0.5
  poly_exponents(1,:) = 0, 1, 0
  poly_exponents(2,:) = 0, 0, 1
/

&FUNCTION
  name = 'diff-C-in-B'
  type = 'polynomial'
  poly_coefficients   = 1.0
  poly_exponents(1,:) = 0
  poly_exponents(2,:) = 1
  poly_refvars = 0.0, -0.1
/

&MATERIAL_SYSTEM
  name = 'B+C'
  phases = 'B+C'
  number_of_components = 2
/
