HEAT TRANSFER/BUOYANCY-DRIVEN FLOW

Heat transfer and buoyancy-driven flow in a 2D unit-square cavity.
Imposed differential temperatures on left and right sides; insulating
elsewhere.  Free-slip flow conditions on all boundaries.

&MESH
  mesh_file = 'ds8.gen'
/
 
&OUTPUTS
  output_t  = 0.0, 75.0
  output_dt = 25.0
/

&PHYSICS
  legacy_flow = .true.
  body_force_density = 0.0, -1.0, 0.0
  heat_transport = .true.
/

&DIFFUSION_SOLVER
  abs_temp_tol       = 0.0
  rel_temp_tol       = 1.0e-3
  abs_enthalpy_tol   = 0.0
  rel_enthalpy_tol   = 1.0e-3
  nlk_tol            = 0.05
  nlk_preconditioner = 'hypre_amg'
  pc_amg_cycles      = 2
/

&NUMERICS
  dt_init = 1.0e-3
  dt_grow = 5.0
  dt_min  = 1.0e-5
  dt_max  = 1000.0
/

&LEGACY_FLOW
  inviscid = .true.
  courant_number = 0.5
  projection_linear_solution = 'projection'
/

&DS_BOUNDARY_CONDITION
  name = 'left side'
  variable = 'temperature'
  condition  = 'dirichlet'
  data_constant = 2.0
  face_set_ids = 1
/

&DS_BOUNDARY_CONDITION
  name = 'right side'
  variable = 'temperature'
  condition  = 'dirichlet'
  data_constant = 1.0
  face_set_ids = 2
/

&DS_BOUNDARY_CONDITION
  name = 'other sides'
  variable = 'temperature'
  condition = 'flux'
  data_constant = 0.0
  face_set_ids = 3, 4
/

&BC
  surface_name = 'from mesh file'    
  mesh_surface = 1                   
  bc_variable  = 'velocity'          
  bc_type      = 'free-slip'         
/

&BC
  surface_name = 'from mesh file'    
  mesh_surface = 2                   
  bc_variable  = 'velocity'          
  bc_type      = 'free-slip'         
/

&BC
  surface_name = 'from mesh file'    
  mesh_surface = 3                   
  bc_variable  = 'velocity'          
  bc_type      = 'free-slip'         
/

&BC
  surface_name = 'from mesh file'    
  mesh_surface = 4                   
  bc_variable  = 'velocity'          
  bc_type      = 'free-slip'         
/

&BODY
  surface_name = 'from mesh file'
  mesh_material_number = 1
  material_number = 1
  velocity = 3*0.0
  temperature = 1.5
/

&MATERIAL
  material_number  = 1
  material_name    = 'liquid'
  material_feature = 'background'
  density          = 1.0
/

&PHASE
  name = 'liquid'
  property_name(1) = 'density',       property_constant(1) = 1.0
  property_name(2) = 'specific heat', property_constant(2) = 1.0
  property_name(3) = 'conductivity',  property_constant(3) = 0.01
  property_name(4) = 'density deviation', property_function(4) = 'drho'
/

&FUNCTION
  name = 'drho'
  type = 'polynomial'
  poly_coefficients   = -0.01
  poly_exponents(:,1) = 1
  poly_refvars        = 1.5
/

&MATERIAL_SYSTEM
  name = 'liquid'
  phases = 'liquid'
/

&LINEAR_SOLVER
  name                    = 'projection'
  method                  = 'fgmres'
  preconditioning_method  = 'ssor'
  preconditioning_steps   = 2
  relaxation_parameter    = 1.4
  convergence_criterion   = 1.0e-12
/
