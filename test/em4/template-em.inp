################################################################################
# 
# AXISYMMETRIC INDUCTION HEATING OF UNIFORM CORE
# 
# Cylindrical conductor in a uniform, alternating magnetic field.  Domain is
# one quarter of a thin cross-sectional slab, surrounded by some free-space.
# The EM permeability and conductivity are temperature dependent.  The hex mesh
# does not include any free space region.  The tet mesh conforms to the hex
# mesh in the conductor, being obtained by subdivision of the hex cells.
#
################################################################################

&MESH
  mesh_file = 'mesh_flat.gen'
  coordinate_scale_factor = 0.01
/

&OUTPUTS
  output_t = 0.0, 1.0e-6
  output_dt = 1.0e-6
/

&NUMERICS /

&PHYSICS
  materials = 'stuff'
  heat_transport = T
  electromagnetics = T
/

&DIFFUSION_SOLVER
  abs_temp_tol = 0
  rel_temp_tol = 1e-4
  abs_enthalpy_tol = 0
  rel_enthalpy_tol = 1e-4
  verbose_stepping = T
/


### BODIES #####################################################################

&BODY
  surface_name = 'from mesh file'
  mesh_material_number = 1
  material_name = 'stuff'
  temperature = 300.0
/


### BOUNDARY CONDITIONS #######################################################

&THERMAL_BC
  name = 'adiabatic'
  type = 'flux'
  face_set_ids = 1, 2, 3
  !face_set_ids = 2, 3
  flux = 0.0
/


### INDUCTION HEATING ##########################################################

&ALTMESH
  altmesh_file = 'mesh_flat.gen'
  altmesh_coordinate_scale_factor = 0.01
/

&ELECTROMAGNETICS
  emfd_solver = {emfd}

  EM_domain_type = 'quarter_cylinder'
  !EM_domain_type = 'full_cylinder'
  uniform_source = {H_bc}
  source_frequency = {source_frequency}

  steps_per_cycle = 64
  maximum_source_cycles = 64
  SS_Stopping_Tolerance = 0.01
  Maximum_CG_Iterations = 1000
  CG_Stopping_Tolerance = 1.0e-10
  material_change_threshold = 0.6
  output_level = 2
/


### MATERIALS ##################################################################

### STUFF ###

&MATERIAL
  name = 'stuff'
  density = 100.0
  specific_heat = 100.0
  conductivity = 1.0
  electrical_conductivity = {sigma}
  electric_susceptibility = {electric_susceptibility}
  magnetic_susceptibility = {magnetic_susceptibility}
/
