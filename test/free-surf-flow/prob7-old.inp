&MESH
  mesh_file = 'mesh2.g'
/

&OUTPUTS
  output_t  = 0.0, 3.0
  output_dt = 0.5
/

&PHYSICS
  legacy_flow = .true.
/

&ADVECTION_VELOCITY
  velocity_constant = 1.0, 0.0, 0.0
/

&NUMERICS
  dt_init = 0.001
  dt_grow = 1.05
  dt_min  = 1.0e-05
  dt_max  = 1.0
/

&LEGACY_FLOW
  applyflow = .true.
  volume_track_subcycles = 2
  courant_number = 0.25
/

Fluid plug
&BODY
  surface_name = 'box'
  length = 1.0, 1.0, 1.0
  translation_pt = -1.5, 0.0, 0.0
  material_number = 1
  velocity = 1.0, 0.0, 0.0
  temperature = 0.0
/

&INTERFACES
  vof_method = 'divide'
  vof_tolerance = 1.0e-2
/

Surrounding void
&BODY
  surface_name = 'background'
  mesh_material_number = 2
  material_number = 2
  velocity = 1.0, 0.0, 0.0
  temperature = 0.0
/

&MATERIAL
  material_name = 'water'
  material_number = 1
  density = 1.0 ! not void
/

&PHASE
  name = 'water'
  property_name(1) = 'density', property_constant(1) = 1.0
/

&MATERIAL_SYSTEM
  name = 'water'
  phases = 'water'
/

&MATERIAL
  material_name = 'void'
  material_number = 2
  density = 0.0
  material_feature = 'background'
/
