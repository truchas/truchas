Applies a linear temperature gradient along the x-direction, and computes the
resulting stress, strain, and displacement.

&MESH
  x_axis%coarse_grid = 0.0, 1.0
  y_axis%coarse_grid = 0.0, 1.0
  z_axis%coarse_grid = 0.0, 1.0
  x_axis%intervals   = 4
  y_axis%intervals   = 4
  z_axis%intervals   = 4
  rotation_angles = 0., 0., 45.
/

&OUTPUTS
  output_t = 0.0, 1.0
  output_dt = 1.0
/

&PHYSICS
  materials = 'stuff'
  heat_transport = .true.
  legacy_solid_mechanics = .true.
/

&DIFFUSION_SOLVER
  abs_temp_tol     = 0.0
  rel_temp_tol     = 1.0e-4
  abs_enthalpy_tol = 0.0
  rel_enthalpy_tol = 1.0e-4
/

&LEGACY_SOLID_MECHANICS
  maximum_iterations = 500
/

&NUMERICS
  dt_init = 1.0
  dt_max = 1.0
/

&BODY
  surface_name = 'from mesh file'
  mesh_material_number = 1
  material_name = 'stuff'
  temperature = 2
/

&THERMAL_BC
  name = 'symmetry planes'
  type = 'flux'
  face_set_ids = 1, 2, 3, 4, 5, 6
  flux = 0.0
/

&BC
  bc_name = 'immobile sides1'
  surface_name = 'from mesh file'
  mesh_surface = 1
  bc_variable = 'displacement'
  bc_type = 'normal-displacement'
  bc_value = 0.0
/

&BC
  bc_name = 'immobile sides2'
  surface_name = 'from mesh file'
  mesh_surface = 2
  bc_variable = 'displacement'
  bc_type = 'normal-displacement'
  bc_value = 0.0
/

&BC
  bc_name = 'immobile sides3'
  surface_name = 'from mesh file'
  mesh_surface = 3
  bc_variable = 'displacement'
  bc_type = 'normal-displacement'
  bc_value = 0.0
/

