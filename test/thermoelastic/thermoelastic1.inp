&MATERIAL
  name = 'stuff'
  density = 1.0
  specific_heat = 1.0
  conductivity = 1.0
  tm_ref_density = 1.0
  tm_ref_temp = 1.0
  tm_linear_cte = 1.0
  ! tm_lame1 = 2.00e+10
  ! tm_lame2 = 1.00e+10
  tm_lame1 = 1.0
  tm_lame2 = 1.0
/
